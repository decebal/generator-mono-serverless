{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": ["es2015", "es6", "dom", "esnext.asynciterable"],
    "sourceMap": true,
    "allowJs": false,
    "jsx": "react",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "declaration": true
  },
  "exclude": [
    "**/*.spec.ts",
    "**/*.*.spec.ts",
    "**/*.test.ts",
    "**/*.*.test.ts",
    "**/test.config.ts",
    "node_modules",
    "**/build/*",
    "**/*.d.ts"
  ]
}
